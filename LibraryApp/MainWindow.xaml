<Window x:Class="LibraryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление библиотекой" Height="600" Width="900">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель поиска и фильтрации -->
        <WrapPanel Grid.Row="0" Margin="0,5">
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="SearchBox" Width="200" Margin="5" Padding="3"/>
            
            <TextBlock Text="Автор:" VerticalAlignment="Center" Margin="5,5,0,5"/>
            <ComboBox x:Name="AuthorFilter" Width="150" Margin="5"/>
            
            <TextBlock Text="Жанр:" VerticalAlignment="Center" Margin="5,5,0,5"/>
            <ComboBox x:Name="GenreFilter" Width="150" Margin="5"/>
            
            <Button x:Name="ResetButton" Content="Сброс" Width="80" Margin="5"/>
        </WrapPanel>

        <!-- Информация о количестве книг -->
        <TextBlock x:Name="TotalBooksText" Grid.Row="1" 
                   Text="Всего книг: 0" 
                   FontWeight="Bold" 
                   Margin="5"/>

        <!-- Таблица книг -->
        <DataGrid x:Name="BooksGrid" Grid.Row="2" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Margin="5"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*" MinWidth="150"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Author.FullName, FallbackValue=''}" Width="150"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre.Name, FallbackValue=''}" Width="120"/>
                <DataGridTextColumn Header="Год" Binding="{Binding PublishYear}" Width="60"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="130"/>
                <DataGridTextColumn Header="В наличии" Binding="{Binding QuantityInStock}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button x:Name="AddButton" Content="Добавить книгу" Width="120" Margin="5" Padding="5"/>
            <Button x:Name="EditButton" Content="Редактировать" Width="100" Margin="5" Padding="5"/>
            <Button x:Name="DeleteButton" Content="Удалить" Width="80" Margin="5" Padding="5"/>
            <Button x:Name="AuthorsButton" Content="Авторы" Width="80" Margin="5" Padding="5"/>
            <Button x:Name="GenresButton" Content="Жанры" Width="80" Margin="5" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>