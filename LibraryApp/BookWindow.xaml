<Window x:Class="LibraryApp.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Книга" Height="350" Width="400"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Название -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="TitleBox" Grid.Row="0" Grid.Column="1" Margin="5" Padding="3"/>

        <!-- Автор (ComboBox + кнопка добавления) -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Автор:" Margin="5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <ComboBox x:Name="AuthorBox" 
                      Width="200" 
                      Padding="3"
                      DisplayMemberPath="FullName" 
                      SelectedValuePath="Id"/>
            <Button Content="+ Новый" Width="70" Margin="5,0,0,0" Padding="3" Click="AddAuthor_Click" ToolTip="Добавить нового автора"/>
        </StackPanel>

        <!-- Жанр (ComboBox + кнопка добавления) -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Жанр:" Margin="5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <ComboBox x:Name="GenreBox" 
                      Width="200" 
                      Padding="3"
                      DisplayMemberPath="Name" 
                      SelectedValuePath="Id"/>
            <Button Content="+ Новый" Width="70" Margin="5,0,0,0" Padding="3" Click="AddGenre_Click" ToolTip="Добавить новый жанр"/>
        </StackPanel>

        <!-- Год издания -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Год:" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="YearBox" Grid.Row="3" Grid.Column="1" Margin="5" Padding="3"/>

        <!-- ISBN -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="ISBN:" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="IsbnBox" Grid.Row="4" Grid.Column="1" Margin="5" Padding="3"/>

        <!-- Количество в наличии -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Кол-во:" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="QuantityBox" Grid.Row="5" Grid.Column="1" Margin="5" Padding="3"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="5" Padding="5" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="100" Margin="5" Padding="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>